<!DOCTYPE html>
<html>
<head>
	<title></title>
	<link rel="stylesheet" href="/stylesheet/deletebarber.css">

</head>
	<body>
				<h4 style = "color: black"> Delete Barber 
					<ol class="breadcrumb float-right">
						<li class="breadcrumb-item">
							<a href="/admin">
								<i class="fa fa-home"></i>
							</a>
						</li>
						<li class="breadcrumb-item active">
								<a href="/admin/deletebarber">Delete Barber</a>

						</li>
					</ol>
					<div class = "date_delB"><small> <span id="datetime"></span></small></div>
				</h4>

			<br>
		<div align = "center">
			<div class="card bg-light text-dark" >
			   <div class="card-body">
			    <form action="/admin/deletebarber" method="POST">
						    <!-- <br> -->
							<div>
								<h5><label>Current Barbers:<label></h5>
							</div>
						
							<div align="center">
								<ul class="list-group" style = "width:350px">
								<% @barbers.each do |b| %>
						   			<li class = "list-group-item list-group-item-danger"> 
						   				<a href = "/admin/delete/<%= b.id %>" style = fontclass= "list-group-item">
							   				<div align="left">
							   					<span style='font-size:30px;'>&#9940;</span>
							   					<%= b.name %>
							   				</div>
							   							
							   			</a>
						   			</li>
						 		<% end %>
								</ul>
							</div>
							
				</form>
			   </div>
			</div>
		</div>

	</body>
	<script>
		var dt = new Date();
		document.getElementById("datetime").innerHTML = dt.toLocaleDateString();
	</script>
</html>

