<!DOCTYPE html>
<html>
<head>
	<title>Delete Barber</title>
	<link rel="stylesheet" href="/stylesheet/deletebarber.css">
</head>
<style type="text/css">
	.card{
		margin-bottom: 5%;
	}
</style>
<body>
	<h4 style = "color: black"> Delete Barber 
		<ol class="breadcrumb float-right">
			<li class="breadcrumb-item">
				<a href="/admin"><i class="fa fa-home"></i></a>
			</li>
			<li class="breadcrumb-item active">
				<a href="/admin/deletebarber">Delete Barber</a>
			</li>
		</ol>
		<div class = "date_delB"><small><span id="datetime"></span></small></div>
	</h4>
	<br>
	<div align = "center">
		<div class="card bg-light text-dark" >
		   <div class="card-body">
				<div>
					<h5><label>Current Barbers:<label></h5>
				</div>
				<ul class="list-group" style = "width:350px">
					<% @barbers.each do |b| %>
				   		<li style="list-style: none;"><%= b.name %>
						<a style="float: right;" data-toggle="modal" data-target="#exampleModal<%= b.id %>"style = fontclass= "list-group-item"><i class="fas fa-trash"></i></a><hr></li>

						<!-- Modal -->
						<div class="modal fade" id="exampleModal<%= b.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
							<form action="/admin/delete/<%= b.id %>" method="GET">
								<div class="modal-dialog" role="document">
						    	<div class="modal-content">
						      	<div class="modal-header">
						        	<h5 class="modal-title" id="exampleModalLabel"><%= b.name%></h5>
						        	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						          		<span aria-hidden="true">&times;</span>
						        	</button>
						      	</div>
						      	<div class="modal-body">
			   						Are you sure you want to delete this barber?
						      	</div>
						      	<div class="modal-footer">
						        	<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
						        	<button name="Submit" value="Delete" type="submit" class="btn btn-dark" style="float: right;">Delete</button>
						      	</div>
						    	</div>
						  		</div>
							</form>
						</div>
					<% end %>
				</ul>		
			</div>
		</div>
	</div>
</body>
<script>
	var dt = new Date();
	document.getElementById("datetime").innerHTML = dt.toLocaleDateString();
</script>
</html>

