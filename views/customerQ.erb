  background: url(https://i.etsystatic.com/13567406/r/il/22675e/1497993443/il_1588xN.1497993443_qs36.jpg) no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}*/

</style>
<html>
<meta http-equiv="refresh" content="15">
<body>


		<main class="grid" id="hello">
		<% @barbers.each do |b| %>
		<% customers = b.wait_list %>
		<div class="card card-outline " >
		  <div class="card-content card-content-padding">
		  		<% if customers[0] == nil %>
					<div class="card-body">
						<h5 class="card-title"><%= b.name %></h5>
						<p class="card-text"><ul class="list-group list-group-flush"></ul></p>
					</div>
				<% else %>
					<div class="card-body">
						<h5 class="card-title"><%= b.name %></h5>
						<p class="card-text">
							<ol class="list-group list-group-flush">
							  	<% customers.each do |c| %>
							  	<li class="list-group-item">
							  		<%= c.name %>
							  	</li><% end %>

							</ol>
						</p>
					</div>
				<% end %>
		  </div>
		</div>
		<% end %>
	</main>

</body>
</html>
<script type="text/javascript">
//time to scroll to bottom
    $("html, body").animate({ scrollTop: $(document).height() }, 9650);
    //scroll to top
    $('html, body').animate({scrollTop:0}, 8000);
</script>