					    	<div class="modal-content">
					      	<div class="modal-header">
					        	<h5 class="modal-title" id="exampleModalLabel"><%= c.hair_type %></h5>
					        	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					          		<span aria-hidden="true">&times;</span>
					        	</button>
					      	</div>
					      	<div class="modal-body">
		   						<input size="10" type = "number" name = "price" placeholder="Enter new price" style="float: right;">
					      	</div>
					      	<div class="modal-footer">
					        	<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					        	<input type ="submit" name = "Submit" value="Update" style="float: right;">
					      	</div>
					   		</div>
					  		</div>
						</form>
					</div>

					<!-- Delete Modal -->
					<div class="modal fade" id="exampleModal2<%= c.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
