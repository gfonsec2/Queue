				    <a style="float: right;"class="btn" data-toggle="modal" data-target="#exampleModal2<%= c.id %>"><i class="fas fa-trash"></i></a><hr></li>
					    
			     	<!-- Modal -->
					<div class="modal fade" id="exampleModal<%= c.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
						<form action="/admin/updateprice/<%= c.id %>" method="PATCH">
