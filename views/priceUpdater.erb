<form action="/admin/updateprice/<%= c.id %>" method="PATCH">
							<div class="modal-dialog" role="document">
					    	<div class="modal-content">
					      	<div class="modal-header">
					        	<h5 class="modal-title" id="exampleModalLabel"><%= c.hair_type %></h5>
