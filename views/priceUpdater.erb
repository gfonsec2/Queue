<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" href="/stylesheet/services.css">
	<style>
.grid { 
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  grid-gap: 20px;
  align-items: stretch;
  }
.grid > article {
  border: 1px solid #ccc;
  box-shadow: 2px 2px 6px 0px  rgba(0,0,0,0.3);
}
.grid > article img {
  max-width: 100%;
}
.text {
  padding: 0 20px 20px;
}
.text > button {
  background: gray;
  border: 0;
  color: white;
  padding: 10px;
  width: 100%;
  }
</style>
</head>
<body>
	<h4 style = "color: black">Services 
		<ol class="breadcrumb float-right">
			<li class="breadcrumb-item">
				<a href="/admin"><i class="fa fa-home"></i></a>
			</li>
			<li class="breadcrumb-item active">
				<a href="/admin/updateprice">Services</a>
			</li>
		</ol>
		<div class = "date_priceupdate">
			<small><span id="datetime"></span></small>
		</div>
	</h4>
	<br>

	<div class="card bg-light text-dark" >
		<div class="card-body">
			<h3 align="center">Add a Service</h3>
			<div class = "card-text">
				<form>
					<div>
						<i class="fas fa-bars"></i>
						<select>
		    				<option value="" disabled selected>Category</option>
							<option value="hair">Hairstyle</option>
							<option value="beard">Beardstyle</option>
							<option value="extra">Extras</option>
						</select>
				
			  			<i class="fas fa-cut"></i>
						<input  placeholder="Service Name" type="text" name="name">

						<i class="fas fa-dollar-sign"></i>
						<input type="number" step="any" min="0" max="100" size="10" name="price" placeholder="Service Price" >
<!-- Mau this submit button needs to add the new service -->
						<input type="submit" name="Submit" value="Add" style="float: right;">
					</div>
				</form>
			</div>
		</div>
	</div>
	<hr>

	<main class="grid">
		<div class="card-deck">
		<div class="card bg-light text-dark">
		<div class="card-body">
			<h5 class="card-title" align="center">Hair</h5>
			<p class="card-text">
				<ul class="list-group list-group-flush">
					<% @haircuts.each do |c| %>
				    <li style="list-style: none;"><%= c.hair_type %>: $<%= c.price %>
				    <a style="float: right;"class="btn" data-toggle="modal" data-target="#exampleModal<%= c.id %>"><i class="fas fa-edit"></i></a>
				    <a style="float: right;"class="btn" data-toggle="modal" data-target="#exampleModal2<%= c.id %>"><i class="fas fa-trash"></i></a><hr></li>

			     	<!-- Modal -->
					<div class="modal fade" id="exampleModal<%= c.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
						<form action="/admin/updateprice/<%= c.id %>" method="PATCH">
							<div class="modal-dialog" role="document">
					    	<div class="modal-content">
					      	<div class="modal-header">
					        	<h5 class="modal-title" id="exampleModalLabel"><%= c.hair_type %></h5>
					        	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					          		<span aria-hidden="true">&times;</span>
					        	</button>
					      	</div>
					      	<div class="modal-body">
		   						<input size="10" type = "number" name = "price" placeholder="Enter new price" style="float: right;">
					      	</div>
					      	<div class="modal-footer">
					        	<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					        	<input type ="submit" name = "Submit" value="Update" style="float: right;">
					      	</div>
					    	</div>
					  		</div>
						</form>
					</div>

					<!-- Delete Modal -->
					<div class="modal fade" id="exampleModal2<%= c.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<!-- Mau, make the function to delete a sercive -->
<form action="/admin/updateprice/<%= c.id %>" method="PATCH">
					  		<div class="modal-dialog" role="document">
					    	<div class="modal-content">
					      	<div class="modal-header">
					        	<h5 class="modal-title" id="exampleModalLabel"><%= c.hair_type %></h5>
					        	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					          		<span aria-hidden="true">&times;</span>
					        	</button>
					      	</div>
					      	<div class="modal-body">
					      		Are you sure you want to delete this service?
					      	</div>
					      	<div class="modal-footer">
					        	<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					        	<input type ="submit" name = "Submit" value="Delete" style="float: right;">
					      	</div>
					    	</div>
					  		</div>
						</form>
					</div>
					<% end %>
				</ul>
			</p>
		</div>
		</div>
 		</div>

  		<div class="card bg-light text-dark">
		<div class="card-body">
			<h5 class="card-title" align="center">Beard</h5>
